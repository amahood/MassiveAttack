<UserControl x:Class="MassiveAttack.BigButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="174" d:DesignWidth="189">
    
    
    <Grid x:Name="ButtonGrid">
        <Image Height="174" HorizontalAlignment="Left" Name="buttonImage" Stretch="Fill" VerticalAlignment="Top" Width="189"  />
        <Ellipse Height="131" HorizontalAlignment="Left" Margin="12,0,0,0" Name="buttonFace" VerticalAlignment="Top" Width="165" Fill="Red" />
        <TextBlock Height="49" HorizontalAlignment="Center"  Name="buttonText" Text="easy" VerticalAlignment="Center" Width="151" Margin="22,38,16,87" FontWeight="ExtraBold" FontSize="32" Foreground="White" OpacityMask="Black" TextAlignment="Center" />
    </Grid>
    
</UserControl>
