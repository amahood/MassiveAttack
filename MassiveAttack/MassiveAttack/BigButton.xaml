<UserControl x:Class="MassiveAttack.BigButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="300" d:DesignWidth="300">
    
    
    <Grid x:Name="ButtonGrid">
        <Image Height="282" HorizontalAlignment="Left" Name="buttonImage" Stretch="Fill" VerticalAlignment="Top" Width="286"  />
        <Ellipse Height="218" HorizontalAlignment="Left" Margin="12,0,0,0" Name="buttonFace" VerticalAlignment="Top" Width="260" Fill="Red" />
        <TextBlock Height="64" HorizontalAlignment="Center"  Name="buttonText" Text="easy" VerticalAlignment="Center" Width="260" Margin="12,75,28,161" FontWeight="ExtraBold" FontSize="45" Foreground="White" OpacityMask="Black" TextAlignment="Center" />
    </Grid>




</UserControl>
